@using BOL; 
@{
    BOL.Product prodToUpdate = this.ViewData["product"] as BOL.Product;
}

<form method="post">
    Id:<input name="id" type="text" value=@prodToUpdate.Id disabled />
    Name:<input name="Name" type="text"  value="@prodToUpdate.Name"/>
    Desc:<input name="description" type="text" value="@prodToUpdate.Description"/>
    Quantity:<input type="text" id="quantity" name="quantity" value="@prodToUpdate.Quantity"/>
    Price:<input type="text" id="price" name="price" value="@prodToUpdate.Price"/>
    Category:<input type="text" id="ProductCategory" name="ProductCategory" value="@prodToUpdate.ProductCategory"/>
    <button type="submit" value="submit">Submit</button>
</form>
